void setup()
{
  pinMode(8, OUTPUT); 
  pinMode(9, OUTPUT);
  pinMode(13,OUTPUT);
}
/* Condiciones iniciales 
Se definen como salidas los pines 8, 9 y 13*/

void CambiaLed(){
  digitalWrite(13,!digitalRead(13));
}
/* Lee el estado contrario del pin 13 y cambia giro del motor.
 Por defecto el pin 13 esta en Arduino (control) */

void loop()
{
  digitalWrite(9, HIGH);
  digitalWrite(8, LOW); //Configuraci贸n giro del motor horario
  delay(1000); // Espera 1 segundo (1000 milisegundos)
  digitalWrite(9, HIGH);
  digitalWrite(8, HIGH); //Configuraci贸n giro del motor antihorario
  delay(500); // Espera 1 segundo (1000 milisegundos)
  digitalWrite(8, HIGH);
  digitalWrite(9, LOW); //Configuraci贸n giro del motor horario
  delay(1000); // Espera 1 segundo (1000 milisegundos)
  CambiaLed(); //Se llama a la funci贸n CambiaLed
}
